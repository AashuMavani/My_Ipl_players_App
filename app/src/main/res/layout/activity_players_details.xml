<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Players_Details_Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:id="@+id/line1">
        <ImageView
            android:id="@+id/expand"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/expand"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="1/11"
            android:textColor="@color/bg_color8"
            android:textSize="40dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/reload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/reload"/>

    </LinearLayout>

        <ImageView
            android:id="@+id/player_img"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginTop="20dp"
            android:baseline="20dp"
            android:layout_below="@id/line1"/>

        <TextView
            android:id="@+id/players_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="30dp"
            android:textColor="#7E64D3"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_below="@id/player_img"/>
        <TextView
            android:id="@+id/players_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="subName"
            android:textSize="30dp"
            android:textColor="#E0A2E6"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_below="@id/players_name"/>
           <androidx.viewpager.widget.ViewPager
               android:id="@+id/viewpager"
               android:layout_width="match_parent"
               android:layout_height="550dp"
               android:layout_below="@id/line1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:background="#FFC107"
        android:padding="5dp">
        <ImageView
            android:id="@+id/copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/copy1"/>
        <ImageView
            android:id="@+id/previous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_previous"/>
        <ImageView
            android:id="@+id/peancil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/pencil2"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_next_item"/>
        <ImageView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_share"/>


    </LinearLayout>


</RelativeLayout>